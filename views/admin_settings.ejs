<section class="card shadow-soft border-0" data-aos="fade-up">
  <div class="card-body">
    <h3 class="fw-bold mb-3"><i class="fa-solid fa-sliders me-2"></i>Pengaturan Sistem</h3>
    <form class="ajax-form" method="post" action="/admin/settings" enctype="multipart/form-data">
      <div class="row g-3">
        <div class="col-12 col-lg-6">
          <div class="p-3 rounded" style="background:var(--soft);border:1px solid var(--border)">
            <h6 class="fw-bold mb-3">Google OAuth (YouTube)</h6>
            <div class="mb-2">
              <label class="form-label">Client ID</label>
              <input class="form-control" name="google_client_id" value="<%= settings.google_client_id||'' %>">
            </div>
            <div class="mb-2">
              <label class="form-label">Client Secret</label>
              <input class="form-control" name="google_client_secret" value="<%= settings.google_client_secret||'' %>">
            </div>
            <div>
              <label class="form-label">Redirect URI</label>
              <input class="form-control" name="google_redirect_uri" value="<%= settings.google_redirect_uri||'' %>">
            </div>
          </div>
        </div>

        <div class="col-12 col-lg-6">
          <div class="p-3 rounded" style="background:var(--soft);border:1px solid var(--border)">
            <h6 class="fw-bold mb-3">QRIS (Manual)</h6>
            <div class="mb-2">
              <label class="form-label">Payload QRIS</label>
              <textarea class="form-control" name="qris_payload" rows="3" placeholder="000201010212..."><%= settings.qris_payload||'' %></textarea>
            </div>
            <div class="mb-2">
              <label class="form-label">Upload Gambar QRIS</label>
              <input class="form-control" type="file" name="qris_image" accept="image/*">
            </div>
            <% if (settings.qris_image) { %>
              <div class="mt-2">
                <img src="<%= settings.qris_image %>" class="img-fluid rounded border" style="max-width:180px">
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <div class="d-flex gap-2 mt-3">
        <button class="btn btn-brand"><i class="fa-solid fa-floppy-disk me-2"></i>Simpan</button>
        <a href="/admin" class="btn btn-ghost">Kembali</a>
      </div>
    </form>
  </div>
</section>
