<!DOCTYPE html>
<html lang="id" data-theme="dark">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %> Â· Studio</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet">
  <link href="/public/css/app.css" rel="stylesheet">
</head>
<body>

  <!-- Loading Overlay -->
  <div id="appLoader" class="app-loader hidden">
    <div class="spinner"></div>
    <div class="label">Processing...</div>
  </div>

  <!-- Sidebar -->
  <aside class="sidebar" id="sidebar">
    <div class="brand">
      <i class="fa-brands fa-youtube text-danger me-2"></i><span>Studio</span>
    </div>
    <nav class="menu">
      <% if (user?.role === 'admin') { %>
        <a class="item <%= (title||'').includes('Admin')?'active':'' %>" href="/admin">
          <i class="fa-solid fa-gauge-high"></i><span>Admin Dashboard</span>
        </a>
        <a class="item <%= (title||'').includes('Pengaturan')?'active':'' %>" href="/admin/settings">
          <i class="fa-solid fa-sliders"></i><span>Settings</span>
        </a>
      <% } %>
      <a class="item <%= (title||'').includes('Dashboard')?'active':'' %>" href="/">
        <i class="fa-solid fa-house"></i><span>Dashboard</span>
      </a>
      <a class="item <%= (title||'').includes('Live Baru')?'active':'' %>" href="/new">
        <i class="fa-solid fa-bolt"></i><span>New Live</span>
      </a>
      <a class="item <%= (title||'').includes('Accounts')?'active':'' %>" href="/accounts">
        <i class="fa-solid fa-user-gear"></i><span>Accounts</span>
      </a>
    </nav>
  </aside>

  <!-- Topbar -->
  <header class="topbar">
    <button id="btnSidebar" class="icon-btn"><i class="fa-solid fa-bars"></i></button>
    <div class="grow"></div>
    <button id="themeToggle" class="icon-btn" title="Theme"><i class="fa-solid fa-moon"></i></button>
    <div class="dropdown">
      <button class="profile-btn" data-bs-toggle="dropdown" aria-expanded="false">
        <img src="https://ui-avatars.com/api/?background=7c9cff&color=fff&name=<%= (user?.email||'U')[0] %>">
        <span class="d-none d-md-inline"><%= user?.email || 'User' %></span>
        <i class="fa-solid fa-chevron-down ms-1"></i>
      </button>
      <ul class="dropdown-menu dropdown-menu-end shadow">
        <% if (user?.role === 'admin') { %>
          <li><a class="dropdown-item" href="/admin/settings"><i class="fa-solid fa-sliders me-2"></i>Settings</a></li>
        <% } %>
        <li><a class="dropdown-item" href="/accounts"><i class="fa-solid fa-user-gear me-2"></i>Accounts</a></li>
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item text-danger" href="/logout"><i class="fa-solid fa-right-from-bracket me-2"></i>Logout</a></li>
      </ul>
    </div>
  </header>

  <!-- Content -->
  <main class="page">
    <div class="container-fluid py-4">
      <%- body %>
    </div>
  </main>

  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
  <script src="/public/js/app.js"></script>
</body>
</html>
